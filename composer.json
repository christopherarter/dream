{
    "name": "christopherarter/dream",
    "description": "The AI/ML toolbox for Laravel",
    "version": "0.2.0",
    "keywords": [
        "christopherarter",
        "dream",
        "laravel"
    ],
    "homepage": "https://github.com/christopherarter/dream",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Chris Arter",
            "email": "chris@arter.dev",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1",
        "aws/aws-sdk-php": "^3.240",
        "illuminate/support": "^9.0",
        "rubix/ml": "^2.2"
    },
    "require-dev": {
        "orchestra/testbench": "^7.1",
        "phpunit/phpunit": "^9.0",
        "laravel/pint": "^1.0",
        "phpstan/extension-installer": "^1.1",
        "phpstan/phpstan-deprecation-rules": "^1.0",
        "phpstan/phpstan-phpunit": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "Dream\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Dream\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage",
        "format": "vendor/bin/pint",
        "analyse": "vendor/bin/phpstan analyse"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "phpstan/extension-installer": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Dream\\DreamServiceProvider"
            ],
            "aliases": {
                "Dream": "\\Dream\\Facades\\Dream"
            }
        }
    }
}
